{
    "common": {
        "name":                     "occ",
        "version":                  "0.2.1",
        "title":                    "ObjectControlCalendar Adapter",
        "desc": {
            "de": "Objekt Kontrolle in Webkalender mittels Javascript/Node.js",
            "en": "Javascript/Node.js based Object Control Calendar adapter",
            "ru": "Управление объектами через календарь"
        },
        "platform":                 "Javascript/Node.js",
        "mode":                     "daemon",
        "icon":                     "logo.svg",
        "extIcon":                  "http://fullcalendar.io/images/logo.svg",
        "keywords":                 ["scheduler", "calendar", "fullcalendar", "object control", "homematic"],
        "loglevel":                 "info",
        "localLink":		        "http://%ip%:%web_port%/occ/index.html",
        "dependencies":             ["web", "ical", "hm-rpc"],
        "readme":                   "https://github.com/husky-koglhof/iobroker.occ/blob/master/README.md",
        "onlyWWW":                  false,
        "singleton":                true,
        "messagebox":               true,
        "adminTab":                {
            "singleton":    true,
            "name":         {
                "de": "OCC",
                "en": "OCC",
                "ru": "OCC"
            },
            "link":         "http://%ip%:%web_port%/occ/index.html"
        }
    },
    "native": {
        "demo": true,
        "ical": false,
        "thermostat": {
            "name": "Default",
            "paramset": "MASTER",
            "decalcset": "MASTER",
            "param_chn": 0,
            "decalc_chn": 0,
            "decalc_time": "DECALCIFICATION_TIME",
            "decalc_day": "DECALCIFICATION_WEEKDAY",
            "timeoutText": [
                "TEMPERATURE",
                "ENDTIME"
            ],
            "mode": [
                "CONTROL_MODE",
                0
            ],
            "HM-CC-TC": {
                "name": "HM-CC-TC",
                "mode": [
                    "MODE_TEMPERATUR_REGULATOR",
                    1
                ],
                "param_chn": 2,
                "decalc_chn": 2,
                "decalc_time": [
                    "DECALCIFICATION_MINUTE",
                    "DECALCIFICATION_HOUR"
                ],
                "decalc_day": "DECALCIFICATION_DAY",
                "timeoutText": [
                    "TEMPERATUR",
                    "TIMEOUT"
                ]
            },
            "HM-CC-RT-DN": {
                "name": "HM-CC-RT-DN"
            },
            "BC-RT-TRX-CyG-3": {
                "name": "BC-RT-TRX-CyG-3",
                "decalc_chn": 1,
                "decalcset": "VALUES"
            }
        },
        "variable": ["checkbox", "listbox", "numbers", "inputbox", "alarm"]
    },
    "objects": [
    ],
    "instanceObjects": [
        {
            "_id": "updated",
            "type": "state",
            "common": {
                "name": "Some new devices added",
                "type": "boolean",
                "read":  true,
                "write": true
            }
        },
        {
            "_id": "html",
            "type": "channel",
            "common": {
                "name":  "HTML Table",
                "type": "string",
                "read":  true,
                "write": true
            },
            "native": {}
        }
    ]
}
